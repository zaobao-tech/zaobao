---
layout: layout.njk
navSection: skills
pagination:
  data: skillsCategoryPages
  size: 1
  alias: categoryPage
permalink: "categories/{{ categoryPage.path }}/index.html"
title: "{{ categoryPage.nameZh or categoryPage.name }}"
description: "{{ categoryPage.nameZh or categoryPage.name }} 分类下的 Agent Skills"
---

{% if categoryPage.type == "parent" and categoryPage.children and categoryPage.children.length > 0 %}
<script>document.addEventListener("DOMContentLoaded", function() { window.location.replace("/#/skills/{{ categoryPage.children[0].fullSlug }}"); });</script>
{% elif categoryPage.type == "parent" %}
<script>document.addEventListener("DOMContentLoaded", function() { window.location.replace("/#/skills/{{ categoryPage.path }}"); });</script>
{% endif %}
{% if categoryPage.type == "child" %}
  {% set pageSkills = categoryPage.skills or skillsIndex.skillsByCategorySlug[categoryPage.path] or [] %}
  {% if pageSkills.length > 0 %}
<script>document.addEventListener("DOMContentLoaded", function() { window.location.replace("/#/skills/{{ pageSkills[0].slug }}"); });</script>
  {% else %}
<script>document.addEventListener("DOMContentLoaded", function() { window.location.replace("/#/skills/{{ categoryPage.path }}"); });</script>
  {% endif %}
{% endif %}

{% set currentParentSlug = categoryPage.parentSlug if categoryPage.type == "child" else categoryPage.path %}
<section class="nav-layout nav-layout--skills" aria-hidden="true">
  {% set navVariant = "skills" %}
  {% set firstColumnHtml %}
  {% for parent in skillsIndex.categoryTreeWithCounts %}
  <a href="/categories/{{ parent.slug }}/" class="skills-category-tab list-first-item {% if parent.slug == currentParentSlug %}is-active{% endif %}" role="tab">{{ parent.nameZh or parent.name }}</a>
  {% endfor %}
  {% endset %}
  {% set secondColumnHtml %}
  {% for parent in skillsIndex.categoryTreeWithCounts %}
  {% if parent.slug == currentParentSlug %}
  <ul class="list-second-list" id="skills-children-list">
    {% for child in parent.children %}
    <li>
      <a href="/categories/{{ child.fullSlug }}/" class="skills-child-link list-second-item {% if categoryPage.type == "child" and child.fullSlug == categoryPage.path %}is-active{% endif %}">{{ child.nameZh or child.name }}</a>
    </li>
    {% endfor %}
  </ul>
  {% endif %}
  {% endfor %}
  {% endset %}
  {% include "nav-left-aside.njk" %}
  <div class="nav-content">
    {% if categoryPage.type == "parent" %}
    <nav class="breadcrumb" aria-label="面包屑">
      <a href="/">首页</a>
      <span aria-hidden="true">/</span>
      <a href="/categories/">Skills</a>
      <span aria-hidden="true">/</span>
      <span>{{ categoryPage.nameZh or categoryPage.name }}</span>
    </nav>
    <h1 class="nav-page-title">{{ categoryPage.nameZh or categoryPage.name }}</h1>
    {% if categoryPage.description %}
    <p class="nav-page-desc">{{ categoryPage.description }}</p>
    {% endif %}
    {% endif %}

    {% if categoryPage.type == "parent" %}
    <ul class="category-children-list category-children-grid">
      {% for child in categoryPage.children %}
      <li>
        <a href="/categories/{{ child.fullSlug }}/">{{ child.nameZh or child.name }}</a>
        <span class="category-count">{{ child.count }} 个技能</span>
      </li>
      {% endfor %}
    </ul>
    {% else %}
    {% set pageSkills = categoryPage.skills or skillsIndex.skillsByCategorySlug[categoryPage.path] or [] %}
    <div class="nav-panel">
      <div class="nav-list-third list-third" id="skills-skill-list-wrap">
        <ul class="list-third-list" id="skills-skill-list">
          {% for s in pageSkills %}
          <li>
            <a href="/skills/{{ s.slug }}/" class="skill-list-link-inner list-third-item">{{ zaobao.skillTitleBySlug[s.slug] or s.slug }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>
      <div class="nav-resizer" title="拖动调节宽度"></div>
      <div class="nav-detail">
        {% if pageSkills.length > 0 %}
        <nav class="breadcrumb" aria-label="面包屑">
          <a href="/">首页</a>
          <span aria-hidden="true">/</span>
          <a href="/categories/">Skills</a>
          <span aria-hidden="true">/</span>
          <a href="/categories/{{ categoryPage.parentSlug }}/">{{ categoryPage.parentNameZh or categoryPage.parentName }}</a>
          <span aria-hidden="true">/</span>
          <span>{{ categoryPage.nameZh or categoryPage.name }}</span>
        </nav>
        {% endif %}
        <h1 class="nav-page-title">{{ categoryPage.nameZh or categoryPage.name }}</h1>
        {% if categoryPage.description %}
        <p class="nav-page-desc">{{ categoryPage.description }}</p>
        {% endif %}
        <p class="nav-no-content">共 {{ pageSkills.length }} 个技能，点击左侧列表查看内容。</p>
      </div>
    </div>
    {% endif %}
  </div>
</section>
